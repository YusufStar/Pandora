generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model File {
  id             Int       @id @default(autoincrement())
  url            String
  file_name      String
  file_extension String
  Product        Product[]
}

model Size {
  id         Int       @id @default(autoincrement())
  dimensions String
  product    Product[]
  Basket     Basket[]
}

model Product {
  id     Int  @id @default(autoincrement())
  banner File @relation(fields: [fileId], references: [id])
  fileId Int

  price       Int
  images      Json[] // Json olarak resimlerin URL'leri
  discount    Int
  brand       String
  description String

  colors Json[] // ["red", "white"]
  stocks Json? // { 0: 1000 } sizeId:adet

  defaultSizeId Int?

  sizes Size[]

  category Category[]
  features Features[]

  Orders   Orders? @relation(fields: [ordersId], references: [id])
  ordersId Int?

  Basket Basket[]
}

model Category {
  id        Int      @id @default(autoincrement())
  title     String
  Product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}

model Features {
  id        Int      @id @default(autoincrement())
  title     String
  Product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}

model User {
  id       Int    @id @default(autoincrement())
  username String
  email    String @unique
  password String

  baskets Basket[]
  Orders  Orders[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Basket {
  id Int @id @default(autoincrement())

  quantity Int?

  size   Size? @relation(fields: [sizeId], references: [id])
  sizeId Int?

  user   User? @relation(fields: [userId], references: [id])
  userId Int?

  product   Product? @relation(fields: [productId], references: [id])
  productId Int?
}

model Orders {
  id         Int       @id @default(autoincrement())
  totalPrice Int
  products   Product[]
  user       User?     @relation(fields: [userId], references: [id])
  userId     Int?
}
